<% url = OsPhoneBook::Application.routes.url_helpers %>

Event.observe(document, 'dom:loaded', function() {
    new Autocomplete('search_field', {
        serviceUrl: '<%= url.search_path %>',
        minChars: 1,
        maxHeight: 400,
        width: 'auto',
        deferRequestBy: 200,
        onSelect: function(value, data) {window.location.href = data[0];}
    });

    $('search_field').focus();
});
